<script>

    $(document).ready(function () {

        // show data on search
        $('#mySoapButton').on('click', function () {

            var search = $('#myInputTextField').val();
            console.log(search);

            $.ajax({
                url: "/Material/InvokeSoap",
                type: "POST",
                dataType: "JSON",
                success: function (result) {
                    console.log(result);
                },

            });

        });

        let buttonIndex = 0;

        var table = $('#prova').DataTable({
            "paging": true,
            "ordering": true,
            "searching": false,
            "dom": 't',
            "columnDefs": [{
                "width": "1%", "targets": 0,
                "data": null,
                "defaultContent": "<button class=\"expandable\"></button> ",
            }],
            "columns": [
                { "name": "", "autoWidth":true },
                { "name": "materialID", "autoWidth": true },
                { "name": "name", "autoWidth": true },
                { "name": "description", "autoWidth": true },
                { "name": "imgUrl", "autoWidth": true },
                {
                    "render": function (data, type, full) {
                        return '<a class="btn btn-info btn-sm" href=#/>' + 'Print' + '</a>';
                    }
                },
                {
                    "render": function (data, type, full) {
                        return '<a class="btn btn-info btn-sm download-button" href=#/>' + 'Download' + '</a>';
                    }
                }
            ]
        });


        //// show data on search
        $('#myInputTextField').on('change keyup copy paste cut', function () {
            //table.search(this.value).draw();
            let search = this.value;
            table.clear().draw();

            $.ajax({
                url: "/Material/SoapSearch",
                type: "POST",
                dataType: "JSON",
                data: {
                    searchData: search,
                },
                success: function (result) {
                    if ($.trim(result)) {

                        table.clear();
                        result.forEach(function (element) {
                            table.row.add(
                                [null, String(element.materialID), String(element.name), String(element.description), String(element.imgUrl)]
                            ).draw();
                        });

                    } else {
                        table.clear().draw();
                    }
                },

            });

        });

        function insertChild(currentParentId, index) {
            $.ajax({

                url: "/Material/SoapLoadChild",
                type: "POST",
                dataType: "JSON",
                data: {
                    parMaterialId: currentParentId,
                },
                success: function (result) {
                    console.log(result);
                    result.forEach(function (element) {
                        table.row.add(
                            [null, String(element.materialID), String(element.name), String(element.description), String(element.imgUrl)]
                        ).draw();

                        let justInsertedIndex = (table.data().length) - 1;
                        let justInserted = table.row(justInsertedIndex).data()
                        let tempRow;

                        for (var i = justInsertedIndex; i > (index + 1); i--) {
                            tempRow = table.row(i - 1).data();
                            table.row(i).data(tempRow);
                            table.row(i - 1).data(justInserted);
                        }
                        
                    });
                },
                error: function () {
                    console.log("error con LoadChildAjax");
                }

            });
        }
        
        function killChild(currentParentId, index) {
                $.ajax({

                    url: "/Material/SoapLoadChild",
                    type: "POST",
                    dataType: "JSON",
                    data: {
                        parMaterialId: currentParentId,
                    },
                    success: function (result) {
                        console.log(result.length);
                        for (var i = 0; i < result.length; i++){
                            table.row(index+1).remove().draw();

            }
                       /* result.forEach(function (element) {
                            table.row.add(
                                [null, String(element.materialID), String(element.name), String(element.description)]
                            ).draw();

                            let justInsertedIndex = (table.data().length) - 1;
                            let justInserted = table.row(justInsertedIndex).data()
                            let tempRow;

                            for (var i = justInsertedIndex; i > (index + 1); i--) {
                                tempRow = table.row(i - 1).data();
                                table.row(i).data(tempRow);
                                table.row(i - 1).data(justInserted);
                            }

                        });*/
                    },
                    error: function () {
                        console.log("error con LoadChildAjax");
                    }

                });
        }

        $('#prova tbody').on('click', 'button', function () {

            let currentParentId = table.row($(this).parents('tr')).data()[1];
            let index = table.row($(this).parents('tr')).index();

            if (this.classList.contains('expandable')) {
                this.textContent = "";

                this.classList.remove('expandable');
                this.classList.toggle('expanded');

                console.log("Hello There!!!   " + index + "currentParentId" + currentParentId);

                insertChild(currentParentId, index);

            } else {
                this.textContent = "";

                this.classList.remove('expanded');
                this.classList.toggle('expandable');
                killChild(currentParentId, index);
            }

        });

        $('#prova tbody').on('click', 'tr', function () {
            var fileName = "/images/";
                fileName = fileName + table.row(this).data()[4];
            
            $.ajax({
                url: "Material/LoadImage",
                data: {
                    imageName: fileName,
                },
                contentType: "image/png",
                success: function (img) {
                    $('#image-preview').attr('src', img);
                }
            });
        });

    });</script>